            <Dependency>glib2</Dependency>
            <Dependency>libX11</Dependency>
            <Dependency>python</Dependency>
            <Dependency>libxml2</Dependency>
            <Dependency>ncurses</Dependency>
            <Dependency>gstreamer</Dependency>

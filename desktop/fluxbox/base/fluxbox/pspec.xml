    <Package>
        <Name>fluxbox</Name>
        <RuntimeDependencies>
            <Dependency>imlib2</Dependency>
            <Dependency>fontconfig</Dependency>
            <Dependency>libXext</Dependency>
            <Dependency>libXft</Dependency>
            <Dependency>libXinerama</Dependency>
            <Dependency>libXpm</Dependency>

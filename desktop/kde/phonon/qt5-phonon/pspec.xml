            <Dependency>gst-plugins-base-devel</Dependency>
            <Dependency>pulseaudio-libs-devel</Dependency>
            <Dependency>gstreamer-devel</Dependency>
            <Dependency>mesa-devel</Dependency>
        </BuildDependencies>

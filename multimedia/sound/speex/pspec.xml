    </Source>

    <Package>
        <Name>speex</Name>
        <RuntimeDependencies>
            <Dependency>libogg</Dependency>
            <Dependency>speexdsp</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="man">/usr/share/man</Path>
            <Path fileType="library">/usr/lib</Path>

    <Package>
        <Name>libffado</Name>
        <IsA>library</IsA>
        <RuntimeDependencies>
            <Dependency>glibmm</Dependency>
            <Dependency>dbus-c++</Dependency>
            <Dependency>libxmlpp</Dependency>
